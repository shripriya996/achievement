@model IEnumerable<achievement.Models.Achievement>

@{
    ViewBag.Title = "Index";
    int k = 0;
}
<link href="~/Content/styles.css" rel="stylesheet">
<!--main-->
<div class="container" id="main">
    <div class="row">
            <div class="col-md-4 col-sm-6">
                <div class="well">
                    <form class="form-horizontal" role="form">
                         <h4>Create New</h4>
                        <p>Give Credit to the achievement by add here</p>
